<%= render 'pages/home' unless user_signed_in? %>
  <div id="hexes" class="transitions-enabled">
    <% @hexes.each do |hex| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(hex.image.url(:medium)), hex
        %>
        <div class="panel-body">
          <%= hex.description %> </br>
          <strong><%= hex.user.email %></strong>
          <% if hex.user == current_user %>
          <div class="actions">
            <%= link_to 'Edit', edit_hex_path(hex) %>
            <%= link_to 'Destroy', hex, method: :delete, data: { confirm: ' Are you sure?' } %>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>